<h1>Create a new person</h1>

<%= form_for @person do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
<br>
<%= f.label :last_name %>
<%= f.text_field :last_name %>

<br>
<%= f.label :age %>
<!-- <%= f.text_field :age %> -->
<%= f.number_field :age, min: 1, max: 150%>

<br>
<%= f.label :gender %> (M or F)
<%= f.text_field :gender %>
<br>
<%= f.label :hair_color %>
<%= f.text_field :hair_color %>
<br>

<%= f.label :eye_color %>
<%= f.text_field :eye_color %>
<br>

<%= f.label :birth_place %>
<%= f.text_field :birth_place %>
<br>

  <%= f.label :alive %>
  <%= f.check_box :alive %>
<br>
  <%= f.submit %>
<% end %>